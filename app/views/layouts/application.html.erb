<!DOCTYPE html>
<html>
  <head>
    <title>Gramclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

 <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %> 
 <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success notice mb-0"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger mb-0"><%= alert %></p>
    <% end %>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand">gramclone</a>
      <button
        class="navbar-toggler"
        type="button"
        data-toggle="collapse"
        data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent"
        aria-expanded="false"
        aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">
        <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Explore", user_posts_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Home", users_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <span style="text-transform: capitalize"><%= link_to current_user.username, user_path(current_user), class: "nav-link" %></span>
        </li>
        <li class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link" %>
        </li>
        <% else %>
        <li class="nav-item">
          <%= link_to "Sign up", new_registration_path(resource_name), class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Log in", new_session_path(resource_name), class: "nav-link" %>
        </li>
        <% end %>
      </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
